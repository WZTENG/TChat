<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/lucky_money_envelop_bg">

            <ImageView
                android:id="@+id/iv_red_top_backgroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/lucky_money_envelop_cap" />

            <ImageView
                android:id="@+id/iv_red_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/lucky_money_dark_gold_close_btn" />

            <!--<ImageView-->
                <!--android:id="@+id/iv_red_avatar"-->
                <!--android:layout_width="70dp"-->
                <!--android:layout_height="70dp"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:layout_marginTop="35dp"-->
                <!--android:src="@drawable/avatar_def" />-->

            <com.netease.nim.uikit.common.ui.imageview.HeadImageView
                android:id="@+id/iv_red_avatar"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:src="@drawable/avatar_def" />

            <TextView
                android:id="@+id/tv_red_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_red_avatar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:singleLine="true"
                android:text="昵称"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_red_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_red_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:singleLine="true"
                android:text="给你发了一个红包"
                android:textColor="@color/gray_dark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_red_say"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_red_tip"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:maxLines="1"
                android:text="恭喜发财，大吉大利！"
                android:textColor="#F3C967"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_red_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_red_say"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:singleLine="true"
                android:text="0.00元"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_red_open"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@id/tv_red_say"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/wzt_red_item_redpacked_selector"
                android:layout_marginBottom="35dp"
                />

            <Button
                android:id="@+id/btn_red_detial"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:layout_below="@id/tv_red_say"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="90dp"
                android:layout_marginBottom="0dp"
                android:visibility="invisible"
                android:text="查看红包"
                android:textColor="@color/white"
                android:background="#DDBC84"
                />

        </RelativeLayout>

    </FrameLayout>

</LinearLayout>