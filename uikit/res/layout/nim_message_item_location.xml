<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">

    <com.netease.nim.uikit.common.ui.imageview.MsgThumbImageView
        android:id="@+id/message_item_location_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:padding="0dip"/>

    <TextView
        android:id="@+id/message_item_location_address"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:layout_gravity="top|center_horizontal"
        android:ellipsize="end"
        android:gravity="left|center_vertical"
        android:lineSpacingExtra="1dip"
        android:paddingBottom="2dip"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingTop="2dip"
        android:maxLines="2"
        android:textColor="#000000"
        android:background="@drawable/wzt_message_location_item_addr_bg"
        android:textSize="12sp"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:src="@drawable/new_message_locationpin"/>

</FrameLayout>
